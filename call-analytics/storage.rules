rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to their organization's folder
    match /organizations/{orgId}/calls/{fileName} {
      // Allow read/write for authenticated users
      allow read, write: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write in organizations folder
    match /organizations/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Fallback: Allow any authenticated user to read/write
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
